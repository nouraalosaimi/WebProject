    <main>
        <section class="box-container">
            <div class="box-wraper">
                <div class="box">
                    <h1>Profile</h1>
                </div>
            </div>
        </section>
        <section class="container">
            <div class="profile-container">
                <div class="profile-box">
                    <div class="image-wraper">
                        <img src="images/pic.svg" width="100%" alt="">
